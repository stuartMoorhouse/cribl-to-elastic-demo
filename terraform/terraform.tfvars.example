# AWS Configuration
aws_region = "eu-north-1"

# REQUIRED: Your IP address for SSH/RDP access
# Get your IP: curl -s https://checkip.amazonaws.com
# Format: x.x.x.x/32
allowed_ssh_cidr = "YOUR_IP_HERE/32"

# SSH key paths (defaults shown, adjust if needed)
ssh_public_key_path  = "~/.ssh/id_ed25519.pub"
ssh_private_key_path = "~/.ssh/id_ed25519"

# Elastic Cloud Configuration
ec_region              = "aws-eu-north-1"
elastic_version        = "8.17.0"
deployment_template_id = "aws-storage-optimized"
elasticsearch_size     = "4g"
kibana_size            = "1g"

# Note: Windows Administrator password is auto-generated
# View it with: terraform output windows_admin_password